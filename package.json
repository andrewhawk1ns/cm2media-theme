{
  "name": "cm2media-theme",
  "version": "1.0.0",
  "description": "Bootstrap 4, Node.js and Wordpress in a blender.",
  "main": "index.js",
  "dependencies": {
    "bootstrap": "^4.0.0-alpha.6",
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "jquery-ui-dist": "^1.12.1",
    "popper.js": "^1.12.6"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.13",
    "eslint": "^4.9.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-babel": "^7.0.0",
    "gulp-clean-css": "^3.9.0",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^3.4.0",
    "gulp-merge": "^0.1.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "require-dir": "^0.3.2",
    "yarn": "^1.2.1"
  },
  "config": {
    "assets": {
      "images": "./assets/images/*",
      "frontend": {
        "scripts": "./assets/frontend/js/*.js",
        "styles": "./assets/frontend/styles/**/*.scss",
        "stylesMain": "./assets/frontend/styles/main.scss",
        "vendor": {
          "styles": [
            "node_modules/bootstrap/scss/"
          ],
          "stylesMain": "./assets/frontend/styles/vendor.scss",
          "scripts": [
            "node_modules/jquery/dist/jquery.min.js"
          ]
        }
      },
      "admin": {
        "scripts": "./assets/admin/js/*.js",
        "styles": "./assets/admin/styles/**/*.sass",
        "stylesMain": "./assets/admin/styles/admin.scss",
        "vendor": {
          "styles": [
            "node_modules/jquery-ui-dist/"
          ],
          "stylesMain": "./assets/admin/styles/vendor.scss",
          "scripts": [
            "node_modules/jquery-ui-dist/jquery-ui.min.js"
          ]
        }
      }
    },
    "browsersync": {
      "projectURL": "localhost"
    },
    "public": {
      "dest": "public",
      "destJS": "./public/scripts",
      "destCSS": "./public/styles",
      "destIMG": "./public/images",
      "frontend": {
        "scripts": "frontend.js",
        "scriptsMin": "frontend.min.js",
        "styles": "frontend.css",
        "stylesMin": "frontend.min.css",
        "vendor": {
          "styles": "vendor.css",
          "stylesMin": "vendor.min.css",
          "scripts": "vendor.js",
          "scriptsMin": "vendor.min.js"
        }
      },
      "admin": {
        "scripts": "admin.js",
        "scriptsMin": "admin.min.js",
        "styles": "admin.css",
        "stylesMin": "admin.min.css",
        "vendor": {
          "styles": "admin-vendor.css",
          "stylesMin": "admin-vendor.min.css",
          "scripts": "admin-vendor.js",
          "scriptsMin": "admin-vendor.min.js"
        }
      }
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "gulp prep",
    "dev": "gulp watch",
    "sync": "gulp watch:sync",
    "global": "gulp watch:global"
  },
  "repository": {
    "type": "git",
    "url": "cm2media-theme"
  },
  "keywords": [
    "Cm2 Media",
    "Bootstrap 4",
    "Node.js",
    "WordPress",
    "Media",
    "Marketing"
  ],
  "author": "Andrew Hawkins",
  "license": "GPL-2.0",
  "peerDependencies": {}
}
